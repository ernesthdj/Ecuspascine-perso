<!--
  App.xaml : dictionnaires de ressources globaux pour toute l'application.
  On ne met PAS StartupUri ici car la fenêtre est créée par DI dans App.xaml.cs (OnStartup).
-->
<Application x:Class="Ecauspacine.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Palette couleurs -->
                <ResourceDictionary Source="/Resources/Themes/Colors.xaml"/>
                <!-- Styles + convertisseurs (exposés en StaticResource) -->
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
