<UserControl x:Class="Ecauspacine.Wpf.Views.Dashboard.SchemaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:contracts="clr-namespace:Ecauspacine.Contracts.Common;assembly=Ecauspacine.Contracts"
             mc:Ignorable="d"
             d:DesignHeight="720"
             d:DesignWidth="1080">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Colonne entités -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Entités"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,16" />

            <Border Background="#1F2937" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Nouvelle entité" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <TextBlock Text="Code" />
                    <TextBox Text="{Binding EntityTypeManagement.NewEntityCode, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                    <TextBlock Text="Label" />
                    <TextBox Text="{Binding EntityTypeManagement.NewEntityLabel, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                    <TextBlock Text="Description" />
                    <TextBox Text="{Binding EntityTypeManagement.NewEntityDescription, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             Height="60"
                             Margin="0,0,0,12" />
                    <Button Content="Créer"
                            Command="{Binding EntityTypeManagement.CreateEntityCommand}"
                            Background="{StaticResource AccentBrush}"
                            Foreground="White"
                            FontWeight="SemiBold" />
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <Button Content="Actualiser"
                        Command="{Binding EntityTypeManagement.RefreshEntitiesCommand}"
                        Margin="0,0,8,0" />
                <Button Content="Supprimer" Command="{Binding EntityTypeManagement.DeleteEntityCommand}" />
            </StackPanel>

            <ListBox ItemsSource="{Binding EntityTypeManagement.EntityTypes}"
                     SelectedItem="{Binding EntityTypeManagement.SelectedEntityType}"
                     Height="260"
                     Margin="0,0,0,12">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Label}" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding Code}" Foreground="#9CA3AF" FontSize="12" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="{Binding EntityTypeManagement.ErrorMessage}"
                       Foreground="#F87171"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"
                       Visibility="{Binding EntityTypeManagement.ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />

            <ProgressBar IsIndeterminate="True"
                         Height="6"
                         Visibility="{Binding EntityTypeManagement.IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>

        <!-- Colonne détails -->
        <Grid Grid.Column="1" Margin="24,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Background="#1F2937" CornerRadius="8" Padding="16">
                <StackPanel IsEnabled="{Binding EntityTypeManagement.SelectedEntityType, Converter={StaticResource NullToBoolConverter}}">
                    <TextBlock Text="Informations entité" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,12" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Code" Margin="0,0,12,8" />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding EntityTypeManagement.EditEntityCode, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Label" Margin="0,0,12,8" />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EntityTypeManagement.EditEntityLabel, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Text="Description" Margin="0,0,12,0" />
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding EntityTypeManagement.EditEntityDescription, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 Height="60" />
                    </Grid>
                    <Button Content="Sauvegarder l'entité"
                            Command="{Binding EntityTypeManagement.SaveEntityCommand}"
                            Margin="0,16,0,0" />
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Background="#1F2937" CornerRadius="8" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <ListBox ItemsSource="{Binding AttributeManagement.Attributes}"
                             SelectedItem="{Binding AttributeManagement.SelectedAttribute}"
                             Margin="0,0,12,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Display}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding DataKind}" Foreground="#9CA3AF" FontSize="12" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Column="1">
                        <GroupBox Header="Ajouter un attribut"
                                  Margin="0,0,0,16"
                                  IsEnabled="{Binding EntityTypeManagement.SelectedEntityType, Converter={StaticResource NullToBoolConverter}}">
                            <StackPanel>
                                <TextBlock Text="Code" />
                                <TextBox Text="{Binding AttributeManagement.NewAttributeCode, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                                <TextBlock Text="Label" />
                                <TextBox Text="{Binding AttributeManagement.NewAttributeLabel, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                                <TextBlock Text="Description" />
                                <TextBox Text="{Binding AttributeManagement.NewAttributeDescription, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                                <TextBlock Text="Type" />
                                <ComboBox ItemsSource="{Binding AttributeManagement.DataKinds}"
                                          SelectedItem="{Binding AttributeManagement.SelectedDataKind}"
                                          DisplayMemberPath="DisplayName"
                                          Margin="0,0,0,8" />
                                <TextBlock Text="Accès" />
                                <ComboBox ItemsSource="{Binding AttributeManagement.AccessModes}"
                                          SelectedItem="{Binding AttributeManagement.SelectedAccessMode}"
                                          DisplayMemberPath="DisplayName"
                                          Margin="0,0,0,8" />
                                <CheckBox Content="Obligatoire" IsChecked="{Binding AttributeManagement.NewAttributeIsRequired}" Margin="0,0,0,8" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Ordre" VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <TextBox Width="60" Text="{Binding AttributeManagement.NewAttributeOrder}" />
                                </StackPanel>
                                <TextBlock Text="Valeur par défaut (JSON)" />
                                <TextBox Text="{Binding AttributeManagement.NewAttributeDefault, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True"
                                         Height="60"
                                         Margin="0,0,0,8" />

                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock Text="Groupe d'options" />
                                    <ComboBox ItemsSource="{Binding AttributeManagement.LookupGroups}"
                                              SelectedItem="{Binding AttributeManagement.SelectedLookupGroup}"
                                              DisplayMemberPath="Name">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AttributeManagement.SelectedDataKind.Code}" Value="{x:Static contracts:DataKindCodes.Enum}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock Text="Valeur par défaut (enum)" />
                                    <ComboBox ItemsSource="{Binding AttributeManagement.AvailableLookupItems}"
                                              SelectedItem="{Binding AttributeManagement.SelectedLookupItem}"
                                              DisplayMemberPath="Label">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AttributeManagement.SelectedDataKind.Code}" Value="{x:Static contracts:DataKindCodes.Enum}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock Text="Référence d'entité" />
                                    <ComboBox ItemsSource="{Binding AttributeManagement.EntityTypes}"
                                              SelectedItem="{Binding AttributeManagement.SelectedReferenceType}"
                                              DisplayMemberPath="Label">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AttributeManagement.SelectedDataKind.Code}" Value="{x:Static contracts:DataKindCodes.EntityReference}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                </StackPanel>

                                <Button Content="Créer l'attribut"
                                        Command="{Binding AttributeManagement.AddAttributeCommand}" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Attribut sélectionné"
                                  IsEnabled="{Binding AttributeManagement.SelectedAttribute, Converter={StaticResource NullToBoolConverter}}">
                            <StackPanel>
                                <TextBlock Text="Valeur par défaut" />
                                <TextBox Text="{Binding AttributeManagement.SelectedAttribute.DefaultValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,8" />
                                <TextBlock Text="Accès" />
                                <ComboBox ItemsSource="{Binding AttributeManagement.AccessModes}"
                                          SelectedValuePath="Code"
                                          DisplayMemberPath="DisplayName"
                                          SelectedValue="{Binding AttributeManagement.SelectedAttribute.AccessMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,0,0,8" />
                                <CheckBox Content="Obligatoire"
                                          IsChecked="{Binding AttributeManagement.SelectedAttribute.IsRequired, Mode=TwoWay}"
                                          Margin="0,0,0,8" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Ordre" Margin="0,0,8,0" />
                                    <TextBox Width="60" Text="{Binding AttributeManagement.SelectedAttribute.OrderIndex, Mode=TwoWay}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Enregistrer" Command="{Binding AttributeManagement.SaveAttributeCommand}" Margin="0,0,8,0" />
                                    <Button Content="Supprimer" Command="{Binding AttributeManagement.DeleteAttributeCommand}" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
