<UserControl x:Class="Ecauspacine.Wpf.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="768"
             d:DesignWidth="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation latérale -->
        <Border Grid.Column="0"
                Background="#1F2937"
                Padding="24"
                BorderBrush="#2D3748"
                BorderThickness="0,0,1,0">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="EDDS"
                               FontSize="26"
                               FontWeight="Bold"
                               Margin="0,0,0,12" />
                    <TextBlock Text="Gestion de données statiques"
                               Foreground="#9CA3AF"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16" />
                    <Button Content="Nouvelle entité"
                            Command="{Binding ShowSchemaCommand}"
                            HorizontalAlignment="Stretch"
                            Background="{StaticResource AccentBrush}"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Padding="12,8" />
                </StackPanel>

                <ListBox ItemsSource="{Binding Tabs}"
                         SelectedItem="{Binding SelectedTab}"
                         Margin="0,24,0,24"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="{StaticResource ForegroundBrush}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="10" />
                            <Setter Property="Margin" Value="0,4" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Container"
                                                Background="Transparent"
                                                CornerRadius="6">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Container" Property="Background" Value="#2563EB" />
                                                <Setter Property="Foreground" Value="White" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" FontSize="16" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel DockPanel.Dock="Bottom">
                    <Button Content="Exporter les données"
                            Command="{Binding ShowExportCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="12,8"
                            Margin="0,0,0,8" />
                    <Button Content="Déconnexion"
                            HorizontalAlignment="Stretch"
                            Padding="12,8"
                            Command="{Binding DataContext.LogoutCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Column="1" Padding="24">
            <Border Background="#111827" CornerRadius="12" Padding="24">
                <ContentControl Content="{Binding SelectedTab.Content}" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
