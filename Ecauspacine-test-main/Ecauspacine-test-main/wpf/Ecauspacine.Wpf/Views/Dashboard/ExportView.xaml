<UserControl x:Class="Ecauspacine.Wpf.Views.Dashboard.ExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,24,0">
            <TextBlock Text="Génération & export"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,16" />

            <TextBlock Text="Entité à exporter" />
            <ComboBox ItemsSource="{Binding EntityTypes}"
                      SelectedItem="{Binding SelectedEntityType}"
                      DisplayMemberPath="Label"
                      Margin="0,0,0,12" />

            <TextBlock Text="Formats" />
            <CheckBox Content="CSV" IsChecked="{Binding IncludeCsv}" Margin="0,4,0,0" />
            <CheckBox Content="JSON" IsChecked="{Binding IncludeJson}" Margin="0,4,0,0" />
            <CheckBox Content="XML" IsChecked="{Binding IncludeXml}" Margin="0,4,0,12" />

            <TextBlock Text="Dossier cible" />
            <DockPanel LastChildFill="True" Margin="0,4,0,12">
                <Button Content="Parcourir" Command="{Binding BrowseCommand}" DockPanel.Dock="Right" Margin="0,0,8,0" />
                <TextBox Text="{Binding TargetDirectory, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>

            <Button Content="Exporter"
                    Command="{Binding ExportCommand}"
                    Background="{StaticResource AccentBrush}"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Height="36"
                    Margin="0,0,0,12" />

            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="#4ADE80"
                       Margin="0,0,0,8"
                       Visibility="{Binding StatusMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#F87171"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />

            <ProgressBar IsIndeterminate="True"
                         Height="6"
                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>

        <GroupBox Grid.Column="1" Header="Fichiers générés">
            <ListBox ItemsSource="{Binding GeneratedFiles}" />
        </GroupBox>
    </Grid>
</UserControl>
