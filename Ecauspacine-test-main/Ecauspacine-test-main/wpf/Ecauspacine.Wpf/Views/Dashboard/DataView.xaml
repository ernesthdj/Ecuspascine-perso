<UserControl x:Class="Ecauspacine.Wpf.Views.Dashboard.DataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="720"
             d:DesignWidth="1080">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,24,0">
            <TextBlock Text="Entités" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" />
            <ComboBox ItemsSource="{Binding EntityTypes}"
                      SelectedItem="{Binding SelectedEntityType}"
                      DisplayMemberPath="Label"
                      Margin="0,0,0,12" />

            <TextBlock Text="Recherche" />
            <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="Attribut de tri" />
            <TextBox Text="{Binding SortAttribute, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
            <CheckBox Content="Tri descendant" IsChecked="{Binding SortDescending}" Margin="0,0,0,12" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <Button Content="Rafraîchir" Command="{Binding RefreshCommand}" Margin="0,0,8,0" />
                <Button Content="Ajouter" Command="{Binding CreateRecordCommand}" />
            </StackPanel>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#F87171"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />

            <ProgressBar IsIndeterminate="True"
                         Height="6"
                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0"
                     ItemsSource="{Binding Records}"
                     SelectedItem="{Binding SelectedRecord}"
                     DisplayMemberPath="Json"
                     Margin="0,0,16,0" />

            <StackPanel Grid.Column="1">
                <GroupBox Header="Nouvel enregistrement" Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="JSON" />
                        <TextBox Grid.Row="1"
                                 Text="{Binding NewRecordJson, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="120"
                                 Margin="0,8,0,8" />
                        <Button Grid.Row="2" Content="Créer" Command="{Binding CreateRecordCommand}" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="Enregistrement sélectionné"
                          IsEnabled="{Binding SelectedRecord, Converter={StaticResource NullToBoolConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0"
                                 Text="{Binding EditRecordJson, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 Height="180"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,8" />
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Button Content="Enregistrer" Command="{Binding SaveRecordCommand}" Margin="0,0,8,0" />
                            <Button Content="Supprimer" Command="{Binding DeleteRecordCommand}" />
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
