<!-- Palette simple (sombre) -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FF1F2937"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#FF3B82F6"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FFF3F4F6"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF111827"/>
</ResourceDictionary>
