<!--
  Fenêtre principale. Elle n\'instancie pas le ViewModel :
  c\'est App.xaml.cs (DI) qui fournit un HealthViewModel à MainWindow.
-->
<Window x:Class="Ecauspacine.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Ecauspacine.Wpf.Views.Health"
        Title="Ecauspacine - WPF" Height="300" Width="640" WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <!-- HealthView est un UserControl dédié au check API -->
        <views:HealthView x:Name="HealthView"/>
    </Grid>
</Window>
